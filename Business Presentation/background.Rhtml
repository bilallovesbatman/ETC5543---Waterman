<script>
  document.addEventListener('DOMContentLoaded', () => {
    const slides = document.querySelectorAll('.reveal .slide');
    slides.forEach(slide => {
      slide.setAttribute('data-background-color', '#005E5E');
      slide.setAttribute('data-background-opacity', '1');
      slide.setAttribute('data-color', 'white');
    });
  });
</script>
